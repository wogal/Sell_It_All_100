<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txt_test_v19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/obect_header_txt_v1_"
        android:gravity="center"
        android:padding="15dp"
        android:text="Text 2 Speech v19"
        android:textColor="#f41edf"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/But_text_2_speech_v19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_btn_login_background"
        android:text="Talk To Me"
        android:textColor="#FFC107"
        android:textSize="30dp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/But_text_2_speech_exit_v19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_btn_login_background"
        android:text="Exit"
        android:textColor="#FFC107"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtV_text_v19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/obect_header_txt_v1_"
        android:gravity="center"
        android:padding="15dp"
        android:text="Text"
        android:maxLines="5"
        android:textColor="#1ea2f4"
        android:textSize="30dp"
        android:textStyle="bold"/>




</LinearLayout>
