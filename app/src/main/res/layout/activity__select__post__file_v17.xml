<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/earle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/txt_header_v17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/obect_header_txt_v1_"
            android:gravity="center"
            android:padding="15dp"
            android:text="Select Post File (v17)"
            android:textAllCaps="false"
            android:textColor="#F4511E"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_v_sales_item_name_v17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:background="@drawable/obect_header_txt_v1_"
            android:gravity="center"
            android:padding="15dp"
            android:text="-------"
            android:textAllCaps="false"
            android:textColor="#F4511E"
            android:textSize="30dp"
            android:textStyle="bold"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecView_SelectPost_File_v17"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:clipChildren="false"
            android:keepScreenOn="false"
            android:overScrollMode="never">
        </android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/txt_test_v11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="-- -- -- -- -- -- -- -- -- "
            android:textColor="#f41edf"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/But_make_NEW_Post_v17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_btn_login_background"
            android:text="Make NEW Post"
            android:textAllCaps="false"
            android:textColor="#ff7b07"
            android:textSize="25dp"
            android:textStyle="italic"
            android:visibility="gone"/>



    </LinearLayout>
</RelativeLayout>