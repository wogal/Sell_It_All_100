<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_header_v10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/obect_header_txt_v1_"
        android:gravity="center"
        android:padding="15dp"
        android:text=" FaceBook (v10)"
        android:textColor="#F4511E"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button_v10QQQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_header_v10"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/obect_header_txt_v1_"
        android:gravity="center"
        android:visibility="gone"
        />


    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/facebook_login_button_v10QQQ"
        android:orientation="horizontal">


        <Button
            android:id="@+id/FB_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/bg_btn_login_background"
            android:text="Post"
            android:textColor="#FFC107"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/FB_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/bg_btn_login_background"
            android:text="Delete"
            android:textColor="#FFC107"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/FB_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/bg_btn_login_background"
            android:text="--"
            android:textColor="#FFC107"
            android:textSize="20dp"
            android:textStyle="italic"/>

    </LinearLayout>


    <Button
        android:id="@+id/But_fb_text_post__v10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_1"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_login_background"
        android:text="Post Picky  "
        android:textColor="#FFC107"
        android:textSize="25dp"
        android:textStyle="italic"/>


    <TextView
        android:id="@+id/txt_hash_key_v10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/But_fb_text_post__v10"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/obect_header_txt_v1_"
        android:gravity="center"
        android:padding="15dp"
        android:text="Hash Code"
        android:textColor="#F4511E"
        android:textSize="25dp"
        android:textStyle="italic"/>


    <Button
        android:id="@+id/But_fb_post_pic_v10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_hash_key_v10"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_login_background"
        android:text="Post Picky  "
        android:textColor="#FFC107"
        android:textSize="25dp"
        android:textStyle="italic"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/But_fb_post_pic_v10"
        android:layout_below="@+id/But_fb_post_pic_v10"
        android:layout_marginStart="39dp"
        android:layout_marginTop="23dp"
        android:text="CheckBox"/>


</RelativeLayout>
